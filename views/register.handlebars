{{#if err}}

<p class="header">
    Something went wrong... Please, register again :-)
</p>

{{/if}}

<div class="form">
    Sich registrieren:
    <form method=POST>
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <input name="name" placeholder="Vorname"></input>
        <input name="lastname" placeholder="Nachname"></input>
        <br>
        <input name="email" placeholder="Email Adresse"></input>
        <input name="password" type="password" placeholder="Dein Passwort"></input>
        <br>
        <center>
            <button>senden</button>
        </center>
    </form>
</div>
